generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id       String @id @unique
  title    String @unique
  subtitle String
  category String
  imgUrl   String
  price    Int
}

model User {
  id       String    @id @unique
  name     String    @unique
  phone    String    @unique
  password String
  Opinion  Opinion[]
}

model Opinion {
  id         String   @id @unique
  date       DateTime
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  valoration Int
  opinion    String
}
