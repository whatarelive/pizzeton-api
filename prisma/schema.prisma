generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String        @id @unique
  title       String        @unique
  subtitle    String
  imgUrl      String
  imgId       String
  category    String
  stock       Boolean       @default(true)
  price       Int
  prominent   Prominent?
}

model Agregations {
  id      String    @id @unique
  title   String    @unique
  price   Int
}

model Prominent {
  id        String  @id @unique
  product   Product @relation(fields: [productId], references: [id])
  productId String  @unique
}

model User {
  id       String    @id @unique
  name     String    @unique
  email    String    @unique
  password String
  role     String    @default("user")
  isBaned  Boolean   @default(false)
  Opinion  Opinion[]
}

model Opinion {
  id         String   @id @unique
  date       DateTime
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  valoration Int
  opinion    String
}

model Event {
  id         String   @id @unique
  title      String   @unique
  subtitle   String
  imgUrl     String
  imgId      String
  active     Boolean  @default(true)
}